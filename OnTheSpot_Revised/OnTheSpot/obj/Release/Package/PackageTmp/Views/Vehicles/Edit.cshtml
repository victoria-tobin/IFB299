@model OnTheSpot.Models.Vehicle

@{
    ViewBag.Title = "Edit";
}


@*Admin and courier only - edit the details of a particular vehicle e.g. a courier want's to use the vehicle, so can edit the InUse and UsedBy fields*@


<div class="bodytext">

    <h1>Edit Vehicle Information</h1>
    <h2> Vehicle Specifications </h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend> Identification </legend>
            @Html.HiddenFor(model => model.Registration)
            <div class="display-field">
                <strong> Registration: </strong><div class="display-field">@Html.EditorFor(model => model.Registration)</div>
            </div>
            <div class="display-field">
                <strong> Make: </strong><div class="display-field">@Html.DropDownListFor(model => model.Type, new SelectList(Enum.GetValues(typeof(OnTheSpot.Models.VehicleType))))</div>
            </div>
            <div class="display-field">
                <strong> Owner: </strong><div class="display-field">@Html.EditorFor(model => model.Owner)</div>
            </div>

            <legend> Current Status </legend>
            <div class="display-field">
            <strong> In use: </strong><div class="display-field">@Html.EditorFor(model => model.InUse)</div>
                    @Html.ValidationMessageFor(model => model.InUse)
            </div>
            <div class="display-field">
            <strong> Used by: </strong><div class="display-field">@Html.EditorFor(model => model.UsedBy)</div>
                    @Html.ValidationMessageFor(model => model.UsedBy)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
