@model OnTheSpot.Models.Vehicle

@{
    ViewBag.Title = "Delete";
}

@*Admin and courier only - ability to delete a vehicle (if no longer needed, no longer owned, etc)*@

<div class="bodytext">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>Vehicle</legend>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.Owner)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Owner)
        </div>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.InUse)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.InUse)
        </div>

        <div class="display-label">
             @Html.DisplayNameFor(model => model.UsedBy)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.UsedBy)
        </div>
    </fieldset>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</div>